  <div class="container login__section">
    <div class="card d-flex flex-row align-items-center justify-content-center login__card">
      <div class="col-6">
        <img
          src='https://cdn.dribbble.com/users/5920881/screenshots/14088635/media/da11146df7c3cb056c8d8aa60333b935.gif'
          alt='' class='login__gif' />
      </div>
      <div class="card-body login__cardbody col-6">
        <div class="card-title mb-4">
          <h2>Sign Up</h2>
        </div>
        <form>
          <div class="row g-1">
            <div class="col-3">
              <label for="businessInput">Business Name</label>
            </div>
            <div class="col-7">
              <input type="text" id="businessInput" class="form-control" placeholder="Business Name">
            </div>
          </div>
          <div class="row g-1 mt-2">
            <div class="col-3">
              <label for="phoneInput">Phone</label>
            </div>
            <div class="col-7">
              <input type="text" id="phoneInput" class="form-control" placeholder="Phone">
            </div>
          </div>
          <div class="row g-1 mt-2">
            <div class="col-3">
              <label for="emailInput">Email</label>
            </div>
            <div class="col-7">
              <input type="email" id="emailInput" class="form-control" placeholder="Email">
            </div>
          </div>
          <div class="row g-1 mt-2">
            <div class="col-3">
              <label for="passwordInput">Password</label>
            </div>
            <div class="col-7">
              <input type="password" id="passwordInput" class="form-control" placeholder="Password">
            </div>
          </div>
          <div class="row g-1 mt-2">
            <div class="col-3">
              <label for="rePasswordInput">Re-Password</label>
            </div>
            <div class="col-7">
              <input type="password" id="rePasswordInput" class="form-control" placeholder="Re-Password">
            </div>
          </div>
          <div class="col-10 text-center">
            <div class="row d-grid mt-3 mx-1 my-3">
              <button class="btn btn-primary" type="button">Sign Up</button>
            </div>
          </div>
        </form>

      </div>
    </div>
  </div>

  <div class='container-fluid footer__background'>
